<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Converter.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Converter"
    Shell.FlyoutBehavior="Disabled">
    <TabBar x:Name="MeasurementTabs">
        <Tab Title="Weight" Icon="weight.svg">
            <ShellContent ContentTemplate="{DataTemplate local:WeightPage}"/>
        </Tab>
        <Tab Title="Volume" Icon="tbs.svg">
            <ShellContent ContentTemplate="{DataTemplate local:VolumePage}"/>
        </Tab>
    </TabBar>
</Shell>
